<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SplashScreenTheme" parent="FullscreenTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="LandingTheme" parent="FullscreenTheme">
        <item name="android:windowBackground">@drawable/blurred_splash_screen</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LoginTheme" parent="FullscreenTheme">
        <item name="android:windowBackground">@drawable/login_screen_background</item>
    </style>

    <style name="ImageButton" parent="Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Button">
        <item name="android:minWidth">@dimen/min_clickable_area</item>
        <item name="android:minHeight">@dimen/min_clickable_area</item>
    </style>

    <!-- Post -->
    <style name="PostNumberTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/post_number_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/post_number_vertical_padding</item>
        <item name="android:paddingRight">@dimen/post_number_padding_right</item>
        <item name="android:paddingLeft">@dimen/post_number_padding_left</item>
        <item name="android:layout_marginLeft">@dimen/post_number_margin_left</item>
        <item name="android:background">@drawable/post_text_extension_background</item>
    </style>

    <style name="PostImageButton" parent="Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/post_button_background_selector</item>
    </style>
    <!-- Post -->

    <!-- Navigation drawer -->
    <style name="NavDrawerMenuLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/nav_drawer_menu_item_selector</item>
    </style>

    <style name="NavDrawerMenuIcon">
        <item name="android:layout_width">@dimen/nav_drawer_menu_icon_size</item>
        <item name="android:layout_height">@dimen/nav_drawer_menu_icon_size</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="NavDrawerMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/nav_drawer_margin_half</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavDrawerMenuDivider">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#BDBDBD</item>
        <item name="android:layout_marginTop">@dimen/nav_drawer_margin_half</item>
        <item name="android:layout_marginBottom">@dimen/nav_drawer_margin_half</item>
    </style>
    <!-- Navigation drawer -->

    <!-- Landing -->
    <style name="FacebookLoginButton">
        <item name="android:paddingTop">@dimen/fb_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/fb_button_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/fb_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/fb_button_horizontal_padding</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LandingButton" parent="Button">

    </style>

    <style name="LoginInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/login_input_side_margin</item>
        <item name="android:layout_marginRight">@dimen/login_input_side_margin</item>
    </style>

    <style name="LandingInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/landing_side_margin</item>
        <item name="android:layout_marginRight">@dimen/landing_side_margin</item>
    </style>
    <!-- Landing -->

    <!-- Hide FB login progress -->
    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

</resources>
