<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreenTheme" parent="FullscreenTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ImageButton" parent="Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Button">
        <item name="android:minWidth">@dimen/min_clickable_area</item>
        <item name="android:minHeight">@dimen/min_clickable_area</item>
    </style>

    <style name="PostNumberTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Landing -->
    <style name="FacebookLoginButton">
        <item name="android:paddingTop">@dimen/fb_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/fb_button_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/fb_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/fb_button_horizontal_padding</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LandingButton" parent="Button">

    </style>

    <style name="LoginScreenButton" parent="LandingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/landing_side_margin</item>
        <item name="android:layout_marginRight">@dimen/landing_side_margin</item>
    </style>

    <style name="LandingInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/landing_side_margin</item>
        <item name="android:layout_marginRight">@dimen/landing_side_margin</item>
    </style>

</resources>
