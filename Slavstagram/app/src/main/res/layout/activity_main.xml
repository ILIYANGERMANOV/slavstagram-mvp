<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:id="@+id/main_drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        tools:context="com.babushka.slav_squad.ui.screens.main.view.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_clickable_area">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:elevation="4dp"
                    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

                <ImageView
                    android:id="@+id/main_toolbar_slav_squad_logo_image_view"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:elevation="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_toolbar_slav_squad"/>
            </RelativeLayout>
        </android.support.design.widget.AppBarLayout>

        <com.babushka.slav_squad.ui.screens.main.view.custom_view.MainPostsContainer
            android:id="@+id/main_posts_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_app_bar_layout"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_add_post_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_white_36dp"
            app:fabSize="normal"/>

        <com.wonderkiln.blurkit.BlurLayout
            android:id="@+id/main_upload_post_blur_layout"
            android:layout_width="match_parent"
            android:elevation="10dp"
            app:fps="0"
            android:visibility="invisible"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="#30FFFFFF"
                tools:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/main_upload_cancel_button"
                    style="@style/Button"
                    android:textSize="18sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="CANCEL"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="50dp"
                    android:layout_above="@+id/main_upload_center_view"
                    android:layout_centerHorizontal="true"
                    android:text="UPLOAD POST\nUSING:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/main_upload_camera_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ImageButton"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/main_upload_center_view"
                    android:src="@drawable/ic_camera"/>

                <TextView
                    android:id="@+id/main_upload_camera_button_label_text_view"
                    android:layout_below="@+id/main_upload_camera_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_alignRight="@id/main_upload_camera_image_button"
                    android:layout_alignLeft="@id/main_upload_camera_image_button"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                <View
                    android:id="@+id/main_upload_center_view"
                    android:layout_centerInParent="true"
                    android:layout_width="1dp"
                    android:layout_margin="20dp"
                    android:layout_height="1dp"/>

                <ImageButton
                    android:id="@+id/main_upload_gallery_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ImageButton"
                    android:layout_toRightOf="@id/main_upload_center_view"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_gallery"/>

                <TextView
                    android:id="@+id/main_upload_gallery_button_label_text_view"
                    android:layout_below="@+id/main_upload_gallery_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gallery"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_alignRight="@id/main_upload_gallery_image_button"
                    android:layout_alignLeft="@id/main_upload_gallery_image_button"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            </RelativeLayout>

        </com.wonderkiln.blurkit.BlurLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/main_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/nav_drawer_header_layout"/>

            <include layout="@layout/nav_drawer_menu_layout"/>

        </LinearLayout>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

