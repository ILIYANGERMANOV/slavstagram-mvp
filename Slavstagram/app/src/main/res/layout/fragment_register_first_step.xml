<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/register_first_step"
              android:orientation="vertical">

    <com.babushka.slav_squad.ui.custom_view.VolumeButton
        style="@style/ImageButton"
        android:id="@+id/register_first_step_volume_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/register_input_side_margin"
        android:layout_marginRight="@dimen/register_input_side_margin"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Registration"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"/>

    <TextView
        style="@style/RegisterInputLabel"
        android:layout_marginTop="30dp"
        android:text="Email:"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/register_first_step_email_edit_text"
        style="@style/RegisterInput"
        android:hint="enter e-mail"
        android:inputType="textEmailAddress"
        app:backgroundTint="@color/white"/>

    <TextView
        style="@style/RegisterInputLabel"
        android:layout_marginTop="30dp"
        android:text="Password:"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/register_first_step_password_edit_text"
        style="@style/RegisterInput"
        android:hint="enter password"
        android:inputType="textPassword"
        app:backgroundTint="@color/white"/>


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/register_first_step_confirm_password_edit_text"
        style="@style/RegisterInput"
        android:layout_marginTop="10dp"
        android:imeOptions="actionNext"
        android:hint="confirm password"
        android:inputType="textPassword"
        app:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/register_first_step_next_button"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/register_input_side_margin"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:enabled="false"
        android:text="NEXT"
        android:textColor="@drawable/register_first_step_next_text_color"
        android:textSize="22sp"/>

</LinearLayout>