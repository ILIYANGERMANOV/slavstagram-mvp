<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/register_first_step_email_edit_text"
        style="@style/LandingInput"
        android:layout_marginTop="30dp"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/register_first_step_password_edit_text"
        style="@style/LandingInput"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/register_first_step_display_name_edit_text"
        style="@style/LandingInput"
        android:layout_marginTop="20dp"
        android:hint="Display name"
        android:inputType="textShortMessage"/>

    <Button
        android:id="@+id/register_first_step_next_button"
        style="@style/LandingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="NEXT"/>

</LinearLayout>