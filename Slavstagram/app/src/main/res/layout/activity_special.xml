<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/special_screen_background"
                tools:context=".ui.screens.special.SpecialActivity">

    <ImageView
        android:layout_width="200dp"
        android:scaleType="fitCenter"
        android:id="@+id/special_heart_image_view"
        android:src="@drawable/special_screen_heart"
        android:layout_centerInParent="true"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/special_days_text_view"
        android:textColor="@color/white"
        tools:text="06d"
        android:layout_toLeftOf="@+id/special_hours_text_view"
        android:layout_alignBaseline="@id/special_hours_text_view"
        android:textSize="54sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/special_hours_text_view"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/special_heart_image_view"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:text="06h"
        android:textSize="54sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:id="@+id/special_center_view"/>

    <TextView
        android:id="@+id/special_minutes_text_view"
        android:textColor="@color/white"
        tools:text="06m"
        android:layout_below="@id/special_center_view"
        android:layout_alignBaseline="@id/special_hours_text_view"
        android:layout_toRightOf="@id/special_hours_text_view"
        android:textSize="54sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/special_message_text_view"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@id/special_heart_image_view"
        android:layout_centerInParent="true"
        android:textSize="40sp"
        tools:text="All I want for Christmas is you!"
        android:layout_height="wrap_content"/>


</RelativeLayout>